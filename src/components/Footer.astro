---
import { t } from '../i18n/translations';
import { type Locale } from '../i18n/utils';

interface Props {
  locale?: Locale;
}

const { locale = 'zh' } = Astro.props;
---

<footer class="py-12 border-t border-white/5 mt-10">
  <div class="max-w-[800px] mx-auto px-6 flex flex-col items-center">
    <div class="flex gap-6 mb-6">
      <a class="text-gray-500 hover:text-white transition-colors text-sm" href="https://www.xiaohongshu.com/user/profile/5e1912af0000000001006945" target="_blank" rel="noopener noreferrer">小红书</a>
      <a class="text-gray-500 hover:text-white transition-colors text-sm" href="https://github.com/capykyo">{t('footer.social.github', locale)}</a>
      <a class="text-gray-500 hover:text-white transition-colors text-sm" href="mailto:kyo@capyexports.com">{t('footer.social.email', locale)}</a>
    </div>
    <p class="text-xs text-gray-600">{t('footer.copyright', locale)}</p>
  </div>
</footer>
