---
import { ViewTransitions } from 'astro:transitions';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { getCollection, getEntry } from 'astro:content';
import { locales, type Locale } from '../../i18n/utils';
import { t } from '../../i18n/translations';
import '../../styles/global.css';
import { marked } from 'marked';

// Configure marked for better rendering
marked.setOptions({
  breaks: true, // Convert line breaks to <br>
  gfm: true, // GitHub Flavored Markdown
});

// Export getStaticPaths for dynamic route
export async function getStaticPaths() {
  return locales.map((locale) => ({
    params: { locale },
  }));
}

// Get locale from params
const { locale } = Astro.params;

// Get all resume entries from Content Collections
const allResumes = await getCollection('resume');

// Find the resume matching the locale
const resumeMatch = allResumes.find((r) => r.data.lang === locale);

// If resume not found, redirect to home
if (!resumeMatch) {
  return Astro.redirect(`/${locale}/`);
}

// For glob loader, use getEntry to get the entry with render capability
let Content: any = null;
let renderedHtml: string | null = null;
let resumeEntry = resumeMatch;

try {
  const entry = await getEntry('resume', resumeMatch.id);
  if (entry) {
    resumeEntry = entry;
    // Check if entry has render method (for standard content collections)
    if ('render' in entry && typeof entry.render === 'function') {
      const rendered = await entry.render();
      Content = rendered.Content;
    } else if (entry.body) {
      // Render Markdown to HTML using marked
      renderedHtml = marked(entry.body) as string;
    }
  }
} catch (e) {
  // If getEntry fails, use the original resumeMatch
  resumeEntry = resumeMatch;
  // If resumeMatch has body, render it
  if (resumeMatch.body) {
    renderedHtml = marked(resumeMatch.body) as string;
  }
  console.warn('Could not get entry with render, using original:', e);
}

// Get page title
const pageTitle = `${resumeEntry.data.title} - ${t('meta.title', locale as Locale)}`;
---

<!doctype html>
<html lang={locale as string}>
  <head>
    <meta charset="UTF-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={resumeEntry.data.title} />
    <title>{pageTitle}</title>
    <ViewTransitions />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200&display=swap" rel="stylesheet" />
  </head>
  <body class="min-h-screen">
    <Header locale={locale as Locale} />
    <main class="max-w-[800px] mx-auto px-6 md:pt-32 pt-16 pb-20">
      <!-- Back Button -->
      <div class="mb-8">
        <a 
          href={`/${locale}/`}
          class="inline-flex items-center gap-2 text-gray-400 hover:text-white transition-colors duration-200"
        >
          <span class="material-symbols-outlined text-xl">arrow_back</span>
          <span>{t('nav.works', locale as Locale)}</span>
        </a>
      </div>

      <!-- Resume Header -->
      <header class="mb-12">
        <h1 class="text-4xl md:text-5xl font-bold mb-6">{resumeEntry.data.name}</h1>
        
        <!-- Contact Information -->
        <div class="flex flex-col gap-3 text-gray-300">
          {resumeEntry.data.email && (
            <div class="flex items-center gap-2">
              <span class="material-symbols-outlined text-lg text-gray-400">email</span>
              <a 
                href={`mailto:${resumeEntry.data.email}`}
                class="hover:text-white transition-colors duration-200"
              >
                {resumeEntry.data.email}
              </a>
            </div>
          )}
          {resumeEntry.data.phone && (
            <div class="flex items-center gap-2">
              <span class="material-symbols-outlined text-lg text-gray-400">phone</span>
              <span>{resumeEntry.data.phone}</span>
            </div>
          )}
          {resumeEntry.data.location && (
            <div class="flex items-center gap-2">
              <span class="material-symbols-outlined text-lg text-gray-400">location_on</span>
              <span>{resumeEntry.data.location}</span>
            </div>
          )}
          {resumeEntry.data.website && (
            <div class="flex items-center gap-2">
              <span class="material-symbols-outlined text-lg text-gray-400">language</span>
              <a 
                href={resumeEntry.data.website}
                target="_blank"
                rel="noopener noreferrer"
                class="hover:text-white transition-colors duration-200 underline underline-offset-4"
              >
                {resumeEntry.data.website.replace(/^https?:\/\//, '')}
              </a>
            </div>
          )}
        </div>

        <!-- Social Links -->
        <div class="flex flex-wrap gap-4 mt-6">
          {resumeEntry.data.github && (
            <a 
              href={resumeEntry.data.github}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 text-gray-400 hover:text-white transition-colors duration-200"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
              <span>GitHub</span>
            </a>
          )}
          {resumeEntry.data.linkedin && (
            <a 
              href={resumeEntry.data.linkedin}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 text-gray-400 hover:text-white transition-colors duration-200"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
              <span>LinkedIn</span>
            </a>
          )}
          {resumeEntry.data.xiaohongshu && (
            <a 
              href={resumeEntry.data.xiaohongshu}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 text-gray-400 hover:text-white transition-colors duration-200"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
              </svg>
              <span>小红书</span>
            </a>
          )}
        </div>
      </header>

      <!-- Resume Content -->
      {Content ? (
        <article class="prose prose-invert prose-gray max-w-none">
          <Content />
        </article>
      ) : renderedHtml ? (
        <article class="prose prose-invert prose-gray max-w-none">
          <div set:html={renderedHtml} />
        </article>
      ) : null}
    </main>
    <Footer locale={locale as Locale} />
  </body>
</html>
